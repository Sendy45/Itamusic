<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/casual_bg"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnGoBack"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:background="#00FFFFFF"
            android:scaleType="center"
            app:srcCompat="@drawable/back_button" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btnProfileActivity"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:backgroundTint="#00FFFFFF"
            app:shapeAppearanceOverlay="@style/circleImageView"
            android:scaleType="center"
            android:padding="10dp"
            android:src="@drawable/profile_button" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/info_text_bg"
        android:layout_gravity="center"
        android:paddingBottom="20dp"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingBottom="20dp">

            <ImageView
                android:layout_width="68dp"
                android:layout_height="52dp"
                android:src="@drawable/settings_button" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings:"
                android:textSize="40dp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="30dp"
            android:paddingVertical="20dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="34dp"
                android:src="@drawable/volume_ic" />
            <SeekBar
                android:id="@+id/sbVolume"
                android:layout_width="365dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:progressDrawable="@drawable/seekbar_track"
                android:thumbTint="#15E3D0"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/btnChangePic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="2dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/normal_light_button_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="start|center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingVertical="15dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:clickable="false"
                    android:src="@drawable/change_profile_pic_ic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    android:clickable="false"
                    android:text="Change Profile Pic"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnChangeUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="2dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/normal_light_button_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="start|center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingVertical="15dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:clickable="false"
                    android:src="@drawable/change_username_ic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    android:clickable="false"
                    android:text="Change UserName"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="2dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/normal_dark_button_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="start|center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingVertical="15dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:clickable="false"
                    android:src="@drawable/notifications_ic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    android:clickable="false"
                    android:text="Notifications"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnResetStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="2dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/normal_light_button_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="start|center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingVertical="15dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:clickable="false"
                    android:src="@drawable/reset_stats_ic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    android:clickable="false"
                    android:text="Reset Exercises"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/btnDeleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:paddingVertical="2dp"
            android:layout_marginVertical="5dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/normal_light_button_bg">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="start|center_vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingVertical="15dp">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:clickable="false"
                    android:src="@drawable/delete_account_ic"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    android:clickable="false"
                    android:text="Delete Account"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>
</LinearLayout>